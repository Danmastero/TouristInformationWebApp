@model IEnumerable<TouristInformation.Models.Continent>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Dodaj nowy kontynent</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                   <label>Nazwa</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, item.Name, new {/* id = item.PrimaryKey */})
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
