@model TouristInformation.Models.Tour

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Wycieczki</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Nazwa</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <label>Opis</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <label>Cena</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            <label>Dostępne miejsca</label> 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSpots)
        </dd>
        <dt class = "col-sm-2">
           <label>Atrakcje</label> 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attraction.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powrót do listy</a>
</div>
