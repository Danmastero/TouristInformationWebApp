@model TouristInformation.Models.Tour

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<h4>Wycieczki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
               <label>Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label>Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Dostępne miejsca</label> 
                <input asp-for="AvailableSpots" class="form-control" />
                <span asp-validation-for="AvailableSpots" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label>Atrakcje</label> 
                <select asp-for="AttractionId" class="form-control" asp-items="ViewBag.AttractionId"></select>
                <span asp-validation-for="AttractionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
