@model TouristInformation.Models.City

@{
    ViewData["Title"] = "Details";
}

<h1>Sczegóły</h1>
    
<div>
    <h4>Miasto</h4>
    <hr />
    <dl class="row">

 
        <dt class="col-sm-2">
             <label>Nazwa</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
             <label>Populacja</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Population)
        </dd>
        <dt class="col-sm-2">
             <label>Opis</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
             <label>Państwo</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Capital)
        </dd>
         <dt class="col-sm-2">
             <label>Atrakcje</label>
        </dt>
        <dd class="col-sm-10">
           <a >@Model.Attractions.FirstOrDefault(e=>e.CityId == Model.Id).Name</a> 
  
        </dd>

    </dl>
    
</div>
<div>
    <a asp-action="Index">Powrót do listy</a>
</div>
