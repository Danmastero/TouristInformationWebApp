@model TouristInformationWebApp.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Jesteś pewny że chcesz usunąć tą</h3>
<div>
    <h4>Rezerwacje</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Id Użytkownika</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            <label>Liczba miejsc</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumOfSeats)
        </dd>
        <dt class = "col-sm-2">
            <label>Wycieczka</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tour.Description)
        </dd class>
        <dt class = "col-sm-2">
            <label>Data</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
