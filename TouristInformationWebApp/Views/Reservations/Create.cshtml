@model TouristInformationWebApp.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Dodawanie</h1>

<h4>Rezerwacji</h4>
<h5>Każdego dnia jest dostępne 50 miejsc na każdą wycieczkę</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger">
                <p><strong>Status rezerwacji:</strong>
                    @if (TempData != null)
                    {
                        @TempData["Message"].ToString()
                    }
                </p>
            </div>
        }
        
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label>Liczba miejsc</label>
                <input asp-for="NumOfSeats" class="form-control"/>
                <span asp-validation-for="NumOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Wycieczka</label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
            </div>
            <div class="form-group">
                <label>Data</label>
                <input asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
